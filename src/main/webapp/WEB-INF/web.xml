<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="5.0"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">

    <display-name>Insurance Company</display-name>

    <!-- Database Configuration -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3310/InsuranceCompany?useSSL=false&amp;serverTimezone=UTC&amp;characterEncoding=UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>db.user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value>root</param-value>
    </context-param>

    <!-- Context Listener -->
    <listener>
        <listener-class>com.example.insurancecompany.config.AppContextListener</listener-class>
    </listener>

    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.example.insurancecompany.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserHomeServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.UserHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHomeServlet</servlet-name>
        <url-pattern>/user/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.UserHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/user/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserHistoryServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.UserHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHistoryServlet</servlet-name>
        <url-pattern>/user/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/user/change-password</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VehicleServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.VehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VehicleServlet</servlet-name>
        <url-pattern>/user/vehicles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PolicyServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.PolicyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PolicyServlet</servlet-name>
        <url-pattern>/user/policies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsuranceServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.UserTasks.InsuranceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsuranceServlet</servlet-name>
        <url-pattern>/user/insurances</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminTariffServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminTariffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminTariffServlet</servlet-name>
        <url-pattern>/admin/tariffs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminInsuranceServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminInsuranceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminInsuranceServlet</servlet-name>
        <url-pattern>/admin/insurances</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPayoutServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminPayoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPayoutServlet</servlet-name>
        <url-pattern>/admin/payouts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminAdministratorServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminAdministratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAdministratorServlet</servlet-name>
        <url-pattern>/admin/administrators</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPolicyRequestsServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminPolicyRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPolicyRequestsServlet</servlet-name>
        <url-pattern>/admin/policy-requests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminActionLogsServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminActionLogsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminActionLogsServlet</servlet-name>
        <url-pattern>/admin/action-logs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPoliciesServlet</servlet-name>
        <servlet-class>com.example.insurancecompany.servlet.AdminTasks.AdminPoliciesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPoliciesServlet</servlet-name>
        <url-pattern>/admin/policies</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>

</web-app>
